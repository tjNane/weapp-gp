.shadow{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,.32);
  z-index: 60;
}
.pop-up{
  background: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 70;
  padding: 70rpx 0 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.radius {
  border-radius:48rpx 48rpx 0px 0px;
}
.close-btn{
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}