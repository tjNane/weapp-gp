.course-title{
  padding: 26rpx 34rpx 29rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.swiper {
  margin: 0;
  height: 1050rpx;
}
.swiper-item{
  width: 624rpx; 
  height: 964rpx;
}
.swiper-item .navigator{
  width: 100%;
  height: 100%;
  position: relative;
}
.slide-image {
  width: 100%; 
  height: 964rpx;
  border-radius: 24rpx;
  position: relative;
}
.swiper .active {
  transform: none;
  transition: all 0.2s ease-in 0s;
}
.swiper .quiet {
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
}
.swiper .status{
  width: 190rpx;
  height: 68rpx;
  position: absolute;
  top: 0;
  right: 0;
  background: #FD553A;
  transition: .5s;
  box-shadow:-7px 7px 18px 0px rgba(59,59,59,0.15);
  border-top-right-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiper .status image{
  width: 22rpx;
  height: 24rpx;
  margin-left: 15rpx;
}