page{
  padding-bottom: 100rpx;
}
/* 顶部 */
.top-wrap{
  height: 376rpx;
  background: #0E0E0E;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.top-wrap view{
  color: white;
}
.top-wrap .onair-title{
  font-size: 26rpx;
  margin: 20rpx 0 30rpx;
}
.top-wrap .go-btn{
  font-size: 24rpx;
  width: 252rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  border: 1rpx solid #FD553A;
  color: #FD553A;
  border-radius: 8rpx;
}


/* tabbar */
.tabbar{
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: white;
}
.tabbar .tab-item{
  font-size: 32rpx;
  position: relative;
  height: 100%;
  line-height: 88rpx;
  font-weight: bold;
}
.tabbar .on{
  color: #FD553A;
}
.tabbar .on::after{
  content: '';
  width: 128rpx;
  height: 6rpx;
  background: #FD553A;
  border-radius: 3rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}


/* 课程介绍 */
.intro-title{
  font-size: 40rpx;
  margin-top: 30rpx;
  font-weight: bold;
}
.introduce .info{
  display: flex;
  margin-top: 16rpx;
}
.introduce .info-item{
  display: flex;  
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-right: 47rpx;
}
.introduce .info-item image{
  width: 18rpx;
  height: 18rpx;
  margin-right: 8rpx;
}
.introduce .course-price{
  font-size: 42rpx;
  color: #FD553A;
  font-weight: bold;
  margin: 20rpx 0 30rpx;
}
.introduce .to-listen{
  height: 72rpx;
  color: #FD553A;
  background: #FEE9E5;
  font-size: 28rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.introduce .to-listen image{
  width: 32rpx;
  height: 32rpx;
}
.list-title{
  font-size: 36rpx;
  line-height: 36rpx;
  margin: 60rpx 0 38rpx;
}
.introduce .teacher-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.introduce .teacher-title-left{
  display: flex;
  align-items: center;
}
.introduce .teacher-title .right-icon{
  width: 14rpx;
  height: 24rpx;
}
.introduce .teacher-img{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}
.introduce .sum-course{
  color: #C7C7C9;
  font-size: 24rpx;
}
.introduce .teacher-desc{
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.introduce .teacher-item{
  margin-bottom: 60rpx;
}
.introduce .check-all{
  background:rgba(245,245,245,1);
  border-radius:6px;
  color: #666;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 26rpx;
}
.pd30{
  padding: 0 30rpx;
}

/* 图文介绍 */
.picture-introduce{
  margin-top: 72rpx;
}
.picture-introduce .picture{
  width: 100%;
}

/* 底部按钮栏 */
.bottom-bar{
  width: 100%;
  height: 98rpx;
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.bottom-bar view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #666;
  position: relative;
}
.bottom-bar view image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}
.bottom-bar view button{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}


/* 课程大纲 */
.outline{
  padding: 0 30rpx;
}
.outline .outline-title{
  font-size: 32rpx;
  font-weight: bold;
}
.outline .course-name{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  height: 134rpx;
}
.outline .have-border{
  border-bottom: 1rpx solid #ECECEC;
}
.outline .course-name image{
  width: 24rpx;
  height: 14rpx;
}
.outline .course-left{
  display: flex;
}
.outline .course-name text:first-child{
  color: #D0D0D0;
  margin-right: 10rpx;
}
.outline .main-title{
  width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.outline .main-title view{
  color: #252525 !important;
}
.outline .main-title view:last-child{
  font-size: 26rpx;
  color: #666 !important;
  margin-top: 6rpx;
}
.outline .sub-name{
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.outline .sub-name image{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.outline .sub-name text{
  flex: 1;
  min-width: 0;
  padding-right: 56rpx;
  box-sizing: border-box;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.outline .course-time{
  font-size: 24rpx;
  margin-top: 6rpx;
  padding: 0 0 0rpx 36rpx;
  display: flex;
  align-items: center;
}
.outline .course-time view{
  color: #C7C7C9;
}
.outline .course-time image{
  width: 18rpx;
  height: 18rpx;
  margin-left: 10rpx;
}
.outline .orange{
  color: #FD553A !important;
}
.courses-title{
  padding: 0;
  font-weight: bold;
}
.outline .sub-course{
  height: 126rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom:1rpx solid #ECECEC;
  position: relative;
}
.outline .submit-works{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.pd50{
  padding-left: 50rpx;
}
.rotate-img{
  transform: rotate(180deg);
}
.progress{
  margin: 30rpx 0 15rpx;
}
.outline .have-learned{
  font-size: 26rpx;
  color: #666;
  text-align: right;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #ECECEC;
}

/* 打卡弹窗 */
.card-modal{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .32);
  z-index: 100;
}
.card{
  height: 714rpx;
  width: 624rpx;
  background: white;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius:0px 0px 20rpx 20rpx;
  overflow: hidden;
}
.card .card-img{
  width: 100%;
  height: 620rpx;
  position: relative;
}
.card .card-img image{
  width: 100%;
  height: 100%;
}
.card .card-img view{
  width: 100%;
  font-size: 26rpx;
  color: white;
  position: absolute;
  bottom: 32rpx;
  left: 0;
  text-align: center;
}
.card .card-btn{
  display: flex;
  height: 94rpx;
}
.card .card-btn view{
  height: 100%;
  width: 50%;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  position: relative;
}
.card .card-btn view:last-child{
  color: #FD553A;
} 
.card .card-btn view:last-child::after{
  content: '';
  width: 1px;
  height: 64rpx;
  background: #E9E9E9;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}

.wxParse-p{
  font-size: 30rpx;
  padding: 0 30rpx;
}