.personal-wrap{
  padding: 48rpx;
}

/* 个人信息 */
.personal-info{
  display: flex;
  align-items: center;
}
.personal-info .user-img{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}
.personal-info .user-name{
  font-size: 48rpx;
  font-weight: bold;
}
.personal-info .edit{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}
.personal-info .edit image{
  width: 24rpx;
  height: 29rpx;
  margin-left: 10rpx;
}

/* 菜单按钮 */
.menu{
  margin: 80rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.menu .menu-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 38rpx;
}
.menu .menu-item image{
  width: 46rpx;
  height: 46rpx;
}
.menu .menu-item .menu-number{
  margin: 10rpx 0;
}
.menu .menu-item .menu-desc{
  font-size: 28rpx;
  color: #666;
}

/* 信息 */
.info{
  border-top: 1rpx solid #ECECEC;
}
.info .info-item{
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ECECEC;
  position: relative;
}
.info .info-text{
  display: flex;
  align-items: center;
}
.info .info-right {
  display: flex;
  align-items: center;
}
.info .info-right .info-progress {
  display: flex;
  align-items: center;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  background: #FEE9E5;
}
.info .info-right .info-progress image {
  width: 24rpx;
  height: 24rpx;
}
.info .info-right .info-progress view {
  color: #FD553A;
  margin-left: 8rpx;
}
.info .info-text image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 18rpx;
}
.info .tap{
  width: 14rpx;
  height: 24rpx;
}
.info .info-item button{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}