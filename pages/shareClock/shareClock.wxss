.title{
  margin-top: 18rpx;
  text-align: center;
  color: #FA5439;
  font-size: 32rpx;
  font-weight: bold;
}
.poster-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
}
.canvas{
  width: 276px;
  height: 436px;
  border-radius: 24rpx;
  background: white;
  box-shadow:2px 9px 38px 0px rgba(215,215,215,0.8);
}
.go-tencent{
  width: 276px;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #FD553A;
  color: white;
  font-size: 32rpx;
  border-radius: 8rpx;
  position: relative;
  z-index: 999;
  margin-top: 36rpx;
}


.pop-btns{
  height: 98rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 44rpx;
}
.pop-btns view{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  position: relative;
  width: 50%;
  height: 100%;
}
.pop-btns view:nth-child(2)::after{
  content: '';
  width: 1px;
  height: 64rpx;
  background: #E9E9E9;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}
.pop-btns image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.pop-btns .share-img{
  width: 40rpx;
  height: 40rpx;
}
.pop-btns button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}