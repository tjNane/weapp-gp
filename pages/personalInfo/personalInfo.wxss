.wrap{
  padding: 32rpx;
}
.info-item{
  height: 110rpx;
  border-bottom: 1rpx solid #ECECEC;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info-item .user-img{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
.info-item input{
  text-align: right;
  width: 400rpx;
}
.save-btn{
  width: 100%;
  height: 80rpx;
  background: #FD553A;
  color: white;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 6rpx;
  margin-top: 98rpx;
}