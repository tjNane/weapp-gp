/* 课程列表样式 */
.courses-list{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.courses-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.courses-item .courses-img{
  width: 240rpx;
  height: 134rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}
.courses-item .courses-img image{
  width: 100%;
  height: 100%;
}
.courses-item .courses-img .courses-data{
  width: 100%;
  height: 48rpx;
  display: flex;
  align-items: center;
  background: rgba(31, 31, 31, .14);
  font-size: 24rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.courses-item .courses-img .courses-data text{
  color: white;
  padding-left: 10rpx;
}
.courses-item .courses-img .courses-data view{
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}
.courses-item .courses-img .courses-data view image{
  width: 13rpx;
  height: 20rpx;
}
.courses-desc{
  width: 430rpx;
  font-size: 32rpx;
}
.courses-desc .desc-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
}
.courses-desc .desc-price{
  font-size: 32rpx;
  color: #FD553A;
  font-weight: bold;
}
.courses-desc .desc-price text{
  font-size: 26rpx;
  color: #C7C7C9;
  padding-left: 6rpx;
  font-weight: normal;
  text-decoration: line-through;
}
.courses-desc .desc-text{
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.courses-desc .desc-text view{
  color: #999;
}
.courses-desc .desc-text image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.courses-title{
  font-size: 36rpx;
  padding: 0 30rpx;
  margin: 30rpx 0;
}